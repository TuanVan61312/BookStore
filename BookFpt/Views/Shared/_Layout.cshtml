@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FptBookOke</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/shoppers/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/shoppers/css/magnific-popup.css">
    <link rel="stylesheet" href="~/shoppers/css/jquery-ui.css">
    <link rel="stylesheet" href="~/shoppers/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/shoppers/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/shoppers/css/aos.css">
    <link rel="stylesheet" href="~/shoppers/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("css", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookFpt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Book" asp-action="Index">Book</a></li>
                        <li class="nav-item"><a class="nav-link active" asp-area="" asp-controller="Category" asp-action="Index">Category</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="user" asp-area="Identity" asp-page="/Users/Index">User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" id="admin" asp-area="Identity" asp-page="/Admin/Index">Admin</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <a class="btn btn-outline-dark" asp-controller="Cart" asp-action="Index">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill count" id="cart_count">
                                @using BookFpt.Helpers
                                @using BookFpt.ViewModels;
                                @{
                                    var data = Context.Session.Get<List<CartItemVM>>("cart");
                                    if (data == null)
                                    {
                                        data = new List<CartItemVM>();
                                    }
                                }
                                @(data.Sum(c => c.Quantity))
                            </span>
                        </a>
                        <div class="col-md-2">
                            <partial name="_LoginPartial.cshtml" />
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - FptBookOke - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/shoppers/js/jquery-3.3.1.min.js"></script>
    <script src="~/shoppers/js/jquery-3.3.1.min.js"></script>
    <script src="~/shoppers/js/jquery-ui.js"></script>
    <script src="~/shoppers/js/popper.min.js"></script>
    <script src="~/shoppers/js/bootstrap.min.js"></script>
    <script src="~/shoppers/js/owl.carousel.min.js"></script>
    <script src="~/shoppers/js/jquery.magnific-popup.min.js"></script>
    <script src="~/shoppers/js/aos.js"></script>
    <script src="~/shoppers/js/main.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
